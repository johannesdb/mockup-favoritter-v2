<div class="sync-device-item">
    {{#if isEditing}}
        <div class="sync-device-edit-form">
            <input 
                type="text" 
                class="sync-device-input" 
                id="deviceInput_{{id}}"
                value="{{name}}"
                placeholder="Enhedsnavn"
            />
            <div class="edit-name-actions">
                <button class="save-name-btn" onclick="saveDeviceName({{id}})">✓</button>
                <button class="cancel-name-btn" onclick="cancelDeviceEdit()">✕</button>
            </div>
        </div>
    {{else}}
        <div class="sync-device-name">
            {{name}}
            {{#if isCurrent}}
                <span class="sync-device-badge">Denne</span>
            {{/if}}
        </div>
        <button class="sync-device-edit" onclick="startDeviceEdit(event, {{id}})">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
            </svg>
        </button>
    {{/if}}
</div>